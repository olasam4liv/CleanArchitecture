{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "${DATABASE}"
  },
  "Jwt": {
    "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "clean-architecture",
    "Audience": "developers",
    "ExpirationInMinutes": 60
  },
  "RequestTiming": {
    "ThresholdMilliseconds": 500
  },
  "AppSettings": {
    "UseEncryptedData": true,
    "EncryptResponseData": true,
    "AddBufferSize": false,
    "EncryptResponseDataBufferSize": 1048576,
    "EmailActivationBaseUrl": "http://localhost:5000",
    "EmailServiceSettings": {
      "BaseUrl": ":https://ctechnotificationapi.azurewebsites.net/api/v1",
      "SendEmail": "Email/SendEmailWithAttachment",
      "SendEmailWithAttachment": "Email/SendEmailWithAttachment",
      "ApiKey": "${EMAIL_SERVICE_API_KEY}"  
    }
  }
}
